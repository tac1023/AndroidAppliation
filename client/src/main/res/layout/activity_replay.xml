<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReplayActivity">
    <TextView
        android:id="@+id/replayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="1x"/>

    <GridView
        android:id="@+id/gridViewReplay"
        android:layout_width="wrap_content"
        android:layout_height="683dp"
        android:layout_weight="1"
        android:columnWidth="20dp"
        android:numColumns="16"
        android:layout_gravity="center"
        tools:listitem="@layout/field_item" />


    <RelativeLayout
        android:id="@+id/LinearLayoutControlReplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textBox"
            android:layout_alignParentLeft="true"
            android:text="Play/Pause" />

        <Button
            android:id="@+id/buttonRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textBox"
            android:layout_alignParentRight="true"
            android:text="Restart" />

        <Button
            android:id="@+id/button1x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonRestart"
            android:layout_centerInParent="true"
            android:text="1X" />

        <Button
            android:id="@+id/button2x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1x"
            android:layout_centerInParent="true"
            android:text="2X" />

        <Button
            android:id="@+id/button3x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2x"
            android:layout_centerInParent="true"
            android:text="3X" />

        <Button
            android:id="@+id/button4x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button3x"
            android:layout_centerInParent="true"
            android:text="4X" />

    </RelativeLayout>

</LinearLayout>